                            .input-text.padding-left.flex-item 
                                select(name='tipoCarro' value=formData.tipoCarro class="form-control margin-right" onClick='setCities(this.value, "cidades")')
                                    each estado, i in estados
                                        option(value=estado.name) #{estado.name}
                    .form-group.flex.flex-item.margin-bottom(class=validationErrors.marcaCarro ? 'has-error' : null)
                            label(class="form-label margin-right margin-left") Marca:
                            .input-text.padding-left.flex-item
                                select(name='marcaCarro' value=formData.marcaCarro class="form-control margin-right" onClick='setCities(this.value, "cidades")')
                                    each estado, i in estados
